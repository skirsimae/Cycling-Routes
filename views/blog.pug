				h1 Places to visit in Apeldoorn
				p Apeldoorn is a quiet city in Gelderland with the population of 150 000 people. Within a short distance by bike, there are many places to see. Take a look at some of them:
				br
				div(id='map')
				script.
					function initMap() {
						var myOptions = {
							zoom: 12,
							center: new google.maps.LatLng(52.227494, 5.956971),
							mapTypeId: 'roadmap'
						}

						var map = new google.maps.Map(document.getElementById('map'), myOptions);
						var markers = [];

						var infowindow = new google.maps.InfoWindow({
							maxWidth: 300,
						});

						var points = [
							[52.235011,5.945987, '<img src="../img/Paleis.jpg">'],
							[52.214037,5.927107, '<img src="../img/monkeyzoo.jpg">'],
							[52.213774,5.926109, '<img src="../img/berg_en_bos.jpg">'],
							[52.218933,5.961228, '<img src="../img/Oranjepark.jpg">']
						];

						for (var i = 0; i < points.length; i++) {
							var marker = new google.maps.Marker({
								position: new google.maps.LatLng(points[i][0], points[i][1]),
								map: map, 
								html: points[i][2]
							});

						var contentString = '<div id="content">'+
							points[i][2]
							'</div';
						console.log(contentString);
						makeInfoWindowEvent(map, infowindow, contentString, marker);
						markers.push(marker);
					};
						function makeInfoWindowEvent(map, infowindow, contentString, marker) {
							google.maps.event.addListener(marker, 'click', function() {
								infowindow.setContent(this.html);
								infowindow.open(map, this);
							});
						};
					}
